{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./build/",
    "skipLibCheck": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": []
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}